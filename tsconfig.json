{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules/*"
    ]
}